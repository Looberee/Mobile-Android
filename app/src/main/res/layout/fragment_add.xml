<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/addTxt"
        android:layout_width="378dp"
        android:layout_height="48dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Add new hike"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameTxt"
        android:layout_width="236dp"
        android:layout_height="36dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Name of the hike"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addTxt" />

    <TextView
        android:id="@+id/dateTxt"
        android:layout_width="236dp"
        android:layout_height="36dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Date of the hike"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationInput" />

    <TextView
        android:id="@+id/locationTxt"
        android:layout_width="236dp"
        android:layout_height="36dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Location"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameInput" />

    <TextView
        android:id="@+id/desTxt"
        android:layout_width="167dp"
        android:layout_height="36dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Description"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/levelTxt" />

    <TextView
        android:id="@+id/lengthTxt"
        android:layout_width="167dp"
        android:layout_height="36dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_medium"
        android:text="Length of the hike"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/parkingTxt" />

    <TextView
        android:id="@+id/levelTxt"
        android:layout_width="167dp"
        android:layout_height="36dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"
        android:text="Difficulty Level"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lengthTxt" />

    <TextView
        android:id="@+id/parkingTxt"
        android:layout_width="167dp"
        android:layout_height="36dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"
        android:text="Parking Available"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateInput" />

    <EditText
        android:id="@+id/nameInput"
        android:layout_width="376dp"
        android:layout_height="36dp"
        android:layout_marginStart="19dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:hint="Son Dong"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTxt" />

    <TextView
        android:id="@+id/dateInput"
        android:layout_width="376dp"
        android:layout_height="36dp"
        android:layout_marginStart="19dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:hint="20/11/2023"
        android:inputType="none"
        android:paddingLeft="20dp"
        android:paddingTop="8dp"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateTxt" />

    <EditText
        android:id="@+id/locationInput"
        android:layout_width="376dp"
        android:layout_height="36dp"
        android:layout_marginStart="19dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:hint="Quang Binh"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationTxt" />

    <Spinner
        android:id="@+id/levelInput"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:hint="HIGH"
        android:entries="@array/levelArray"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/desInput"
        app:layout_constraintStart_toEndOf="@+id/levelTxt" />

    <EditText
        android:id="@+id/desInput"
        android:layout_width="376dp"
        android:layout_height="119dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:gravity="top"
        android:hint="Description about the hike..."
        android:inputType="text|textMultiLine"
        android:padding="15dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desTxt" />

    <Spinner
        android:id="@+id/lengthInput"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:hint="100"
        android:entries="@array/lengthArray"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/levelInput"
        app:layout_constraintStart_toEndOf="@+id/lengthTxt" />

    <Button
        android:id="@+id/add_hike_btn"
        android:layout_width="376dp"
        android:layout_height="36dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_primary"
        android:text="Add"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desInput" />

    <RadioGroup
        android:id="@+id/parkingRadioGroup"
        android:layout_width="157dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/lengthInput"
        app:layout_constraintStart_toEndOf="@+id/parkingTxt"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/Yes"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Yes"
            android:textSize="14dp" />

        <RadioButton
            android:id="@+id/No"
            android:layout_width="79dp"
            android:layout_height="match_parent"
            android:text="No"
            tools:textSize="14dp" />
    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>